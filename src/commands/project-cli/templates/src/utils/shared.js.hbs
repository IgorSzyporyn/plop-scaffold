import { PROJECT_ID } from '../constants'

global[PROJECT_ID] = {
  argv: {},
  cwd: '',
  distPath: '',
  {{#ifEqual "yes" liftoff}}
  configPath: '',
  liftoffEnv: {},
  {{/ifEqual}}
}

export function getShared() {
  return global[PROJECT_ID]
}

export function setShared(toSet) {
  Object.keys(toSet).forEach((key) => {
    global[PROJECT_ID][key] = toSet[key]
  })
}
