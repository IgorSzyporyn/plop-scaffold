import minimist from 'minimist'

export function getCommandFromArgv({ _ }, allowed) {
  let command = ''

  _.some((argvCommand) => {
    const argIsAllowedCommand = allowed.indexOf(argvCommand) > -1

    if (argIsAllowedCommand) {
      command = argvCommand
    }

    return argIsAllowedCommand
  })

  return command
}
