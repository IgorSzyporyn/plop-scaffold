import minimist from 'minimist'

export function getCommandFromArgv({ _ }, allowed) {
  let command = ''

  _.some((argvCommand) => {
    const argIsAllowedRoute = allowed.indexOf(argvCommand) > -1

    if (argIsAllowedRoute) {
      command = argvCommand
    }

    return argIsAllowedRoute
  })

  return command
}
