{
  {{#ifEqual "yes" typescript}}
  "extends": [
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  {{else}}
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  {{/ifEqual}}
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "overrides": [
    {{#ifEqual "yes" typescript}}
    {
      "files": ["**/*.ts"],
      "rules": {
        "no-dupe-class-members": "off" // this is called overloads in typescript
      }
    },
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "no-var": "off" // this is how typescript works
      }
    }
    {{/ifEqual}}
  ],
  "rules": {
    "no-console": [
      2,
      {
        "allow": ["warn", "error"]
      }
    ]
  }
}
